        android:verticalSpacing="10dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:onClick="onClickHome"
        android:text="Перейти к общежитиям" />

</LinearLayout>